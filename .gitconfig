    email = tomas.kallup@diginex.cz
    name = tomaskallup
[core]
    editor = "vim"
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.config/git/ignore
	attributesfile = ~/.gitattributes
[color]
    branch = auto
    diff = auto
    status = auto
	ui = true
[color "branch"]
    current = green bold
    local = blue
    remote = cyan
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green bold
	commit = yellow bold
	whitespace = red reverse
[color "status"]
    added = green
    changed = cyan
    unmerged = yellow
    untracked = red
[alias]
    bcleanup = !git fetch --prune && git branch --merged | egrep -v \"(^\\*|master|develop)\" > /tmp/git-branch-cleanup && vim /tmp/git-branch-cleanup && cat /tmp/git-branch-cleanup | xargs git branch -d
    pbcleanup = !git fetch --prune && git branch -vv | grep ': gone]' | egrep -v \"(^\\*|master|develop)\" > /tmp/git-branch-cleanup && vim /tmp/git-branch-cleanup && cat /tmp/git-branch-cleanup
    rbcleanup = !git fetch --prune && git branch -r --merged | egrep -v \"(^\\*|master|develop)\" > /tmp/git-branch-cleanup && vim /tmp/git-branch-cleanup && sed -i \"\" \"s/origin\\///\" /tmp/git-branch-cleanup && cat /tmp/git-branch-cleanup | xargs git push --delete
    a = add
    aa = add *
    b = branch
    c = commit
    ca = commit -a
    ch = checkout
    cm = commit -m
    cam = commit -am
    chp = cherry-pick
    chpc = cherry-pick --continue
    d = diff
    f = fetch
    fp = fetch --prune
    m = merge
    md = merge develop
    r = reset
    rh = reset HEAD
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
    rbs = rebase --skip
    s = status -sb
    st = stash
    sta = stash apply
    p = push
    pf = push --force-with-lease
    pl = pull
    psuo = push --set-upstream origin
    psu = push --set-upstream
	dt = difftool

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[pull]
	rebase = true
[rebase]
	autoStash = true
